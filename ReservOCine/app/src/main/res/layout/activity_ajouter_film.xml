<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".AjouterFilm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="-46dp"
        tools:layout_editor_absoluteY="-148dp">

        <EditText
            android:id="@+id/etTitre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:hint="Titre" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bouton_rond"
            android:layout_marginBottom="8dp"
            android:text="Upload Image" />

        <EditText
            android:id="@+id/etImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:enabled="false"
            android:padding="16dp"
            android:layout_marginBottom="32dp"
            android:hint="Image Path" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDuree"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/edittext"
                android:hint="Durée"
                android:paddingLeft="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnDuree"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bouton_rond"
                android:text="Choisir durée" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etDateSortie"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/edittext"
                android:hint="Date de sortie"
                android:paddingLeft="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnDateSortie"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bouton_rond"
                android:text="Choisir la date de sortie" />

        </LinearLayout>

        <EditText
            android:id="@+id/etSynopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:padding="16dp"
            android:layout_marginTop="32dp"
            android:hint="Synopsis" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp">

        <EditText
                android:id="@+id/etDateDebut"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:hint="Début de disponibilité"
                android:background="@drawable/edittext"
                android:paddingLeft="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnDateDebut"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bouton_rond"
                android:text="Choisir le début de disponibilité" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">


        <EditText
                android:id="@+id/etDateFin"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:hint="Fin de disponibilité"
                android:background="@drawable/edittext"
                android:paddingLeft="16dp"
                android:layout_marginEnd="16dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btnDateFin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bouton_rond"
                android:text="Choisir la fin de disponibilité" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAjouter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:background="@drawable/bouton_rond"
            android:layout_marginTop="32dp"/>
    </LinearLayout>



</ScrollView>
